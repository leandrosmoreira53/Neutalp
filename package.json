{
  "name": "delta-neutral-vault-v1",
  "version": "1.0.0",
  "description": "Delta Neutral Vault - ERC-4626 vault for delta-neutral strategies on Uniswap v3",
  "author": "DIO Blockchain Formation",
  "license": "MIT",
  "scripts": {
    "compile": "forge build",
    "test": "forge test",
    "test:verbose": "forge test -vvv",
    "test:gas": "forge test --gas-report",
    "clean": "forge clean",
    "format": "forge fmt",
    "snapshot": "forge snapshot",
    "check:vault": "forge script script/CheckVault.s.sol:CheckVaultScript --rpc-url https://sepolia-rollup.arbitrum.io/rpc",
    "test:vault": "forge script script/TestVault.s.sol:TestVaultScript --rpc-url https://sepolia-rollup.arbitrum.io/rpc --broadcast --slow",
    "test:vault:dry-run": "forge script script/TestVault.s.sol:TestVaultScript --rpc-url https://sepolia-rollup.arbitrum.io/rpc"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.4"
  }
}
